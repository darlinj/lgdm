<% if @cloud_accounts && !@cloud_accounts.empty? %>
  <script>
    $(document).ready(function() {
      <% @cloud_accounts.each do |account| %>
        $.get('<%= servers_path( :cloud_id => account.id ) %>', function(data) {
          $('#cloud_list_<%= account.id %>').html(data);
          $(".server-table").tablesorter();
        });
      <% end %>
    })
  </script>
  <% @cloud_accounts.each do |account| %>
    <h2><%= account.label %></h2>
    <div id="cloud_list_<%= account.id %>" class="server_list">
      <table>
        <thead>
          <tr>
            <th>Downloading data...</th>
          </tr>
        </thead>
      </table>
    </div>
  <% end %>
<% end %>
