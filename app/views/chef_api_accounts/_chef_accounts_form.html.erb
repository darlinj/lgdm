<%= @chef_api_account.errors.full_messages unless @chef_api_account.errors.empty? %>
<%= semantic_form_for(@chef_api_account) do |form| %>
  <%= form.inputs do %>
    <%= form.input :label           %>
    <%= form.input :chef_server_url %>
    <%= form.input :chef_username   %>
    <%= form.input :chef_server_key %>
  <% end %>
  <%= form.buttons do%>
    <%= form.submit %>
  <% end %>
<% end %>
