<!DOCTYPE html>
<html>
<head>
  <title>Lgdm</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div>
    <% if !current_user %>
      <%= link_to "Register", new_user_path %> |
      <%= link_to "Log In", login_path %> |
    <% else %>
        <%= current_user.email %><%= link_to "Log out", sessions_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
    <% end %>
  </div>

  <%- flash.each do |name, msg| -%>
    <%= content_tag(:div, :class =>"flash #{name}", :id => "flash_#{name}") do -%>
      <%= content_tag :p, msg -%>
    <% end -%>
  <%- end -%>

  <%= yield %>

</body>
</html>
