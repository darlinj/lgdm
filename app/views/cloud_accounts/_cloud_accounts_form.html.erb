<%= @cloud_account.errors.full_messages unless @cloud_account.errors.empty? %>
<%= semantic_form_for(@cloud_account) do |form| %>
  <%= form.inputs do %>
    <%= form.input :label          %>
    <%= form.input :provider ,  :as => :select,  :collection => ["BT", "EC2"] , :selected => "BT" %>
    <%= form.input :region,  :as => :select,  :collection => ["pi-baynard-stable", "pi-lax"], :selected => "pi-baynard-stable" %>
    <%= form.input :s3_url         %>
    <%= form.input :ec2_url        %>
    <%= form.input :ec2_access_key %>
    <%= form.input :ec2_secret_key %>
  <% end %>
  <%= form.buttons do%>
    <%= form.submit %>
  <% end %>
<% end %>
