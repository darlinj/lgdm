$darkest-green: #60d260;
$mid-green: #a5ffa5;
$green-highlight: #8ee38e;

body {
  background-color: $mid-green;
}

.header {
  width: 920px;
  margin: auto;
  background-image: url(<%= asset_path "main_background.png" %>)
}

.status {
  display: inline;
  float: right;
}

.server-table {
  width: 650px;
}

.instance_id
{
  min-width: 6em;
}

.cloud-account-table {
  margin-bottom: 50px;
}

#menu {
  width: 20%;
  float: left;
}

#menu ul {
  list-style: none;
  min-height: 600px;
  padding: 0;
  margin: 0;
}

#menu li a
{
  background: $mid-green center left no-repeat;
  padding-right: 10px;
  height: 2em;
  line-height: 2em;
  float: left;
  width: 11em;
  display: block;
  margin-bottom: 5px;
  margin-left: 5px;
  text-decoration: none;
  text-align: right;
}

.main-section {
  float: right;
  width: 720px;
  margin-bottom: 50px;
}

.footer {
  clear:both;
}

.content {
  font-family: Arial,Verdana,Tahoma,Helvetica,sans-serif;
	color: #039;
  text-decoration: none;
  text-align: center;
  width: 900px;
  margin: auto;
  background-color: #e2ffe3;
  padding: 10px;
}

.server_list {
  margin-bottom: 15px;
}

/* Menu hightlighting */
body#cloud_accounts a#cloud_accounts_nav,
body#chef_accounts a#chef_accounts_nav,
body#images a#images_nav,
body#servers a#servers_nav {
	color: #fff;
	background: $darkest-green;
}

/*Table layouts */

table
{
	font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif;
	font-size: 12px;
	margin-right: 45px;
	margin-left: 45px;
	width: 480px;
	text-align: left;
	border-collapse: collapse;
}

thead .top-left
{
	background: $darkest-green url(<%= asset_path "left.png" %>) left -1px no-repeat;
}

thead .top-right-dark
{
	background: $darkest-green url(<%= asset_path "right-dark.png" %>) right -1px no-repeat;
  border-top: 0px;
}

thead .top-right-light
{
	background: $mid-green url(<%= asset_path "right-light.png" %>) right -1px no-repeat;
  border-top: 0px;
}

th
{
	padding: 8px;
	font-weight: normal;
	font-size: 13px;
	color: #039;
	background: $darkest-green;
}

td
{
	padding: 8px;
	background: $mid-green;
	border-top: 1px solid #fff;
	color: #669;
}

tfoot .rounded-foot-left-light
{
	background: $mid-green url(<%= asset_path "botleft-light.png" %>) left bottom no-repeat;
}

tfoot .rounded-foot-left-dark
{
	background: $darkest-green url(<%= asset_path "botleft-dark.png" %>) left bottom no-repeat;
}

tfoot .rounded-foot-right
{
  background: $mid-green url(<%= asset_path "botright.png" %>) right bottom no-repeat;
  margin-bottom: 15px;
}

tbody tr:hover td
{
	background: $green-highlight;
}

